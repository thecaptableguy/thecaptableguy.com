# .htaccess in /blog/

RewriteEngine On

# If the requested path does NOT correspond to an existing file on the server (e.g., /blog/my-article)
RewriteCond %{REQUEST_FILENAME} !-f
# And it does NOT correspond to an existing directory on the server (e.g., /blog/archive/)
RewriteCond %{REQUEST_FILENAME} !-d
# And a file with a .html extension, corresponding to the requested path, DOES exist (e.g., /blog/my-article.html)
RewriteCond %{REQUEST_FILENAME}.html -f
# Then internally rewrite the request (e.g., from /blog/my-article to /blog/my-article.html)
RewriteRule ^([^/]+)/?$ $1.html [L]